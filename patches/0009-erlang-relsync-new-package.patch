--- /dev/null
+++ b/package/erlang-relsync/Config.in.host
@@ -0,0 +1,9 @@
+config BR2_PACKAGE_HOST_ERLANG_RELSYNC
+	bool "host erlang-relsync"
+	depends on BR2_PACKAGE_ERLANG
+	select BR2_PACKAGE_HOST_ERLANG_REBAR
+	help
+	  Synchronize Erlang/OTP releases on remote nodes
+	  using distributed Erlang.
+
+	  http://github.com/fhunleth/relsync
diff --git a/package/erlang-relsync/erlang-relsync.mk b/package/erlang-relsync/erlang-relsync.mk
new file mode 100644
index 0000000..e005dda
--- /dev/null
+++ b/package/erlang-relsync/erlang-relsync.mk
@@ -0,0 +1,22 @@
+#############################################################
+#
+# erlang-relsync
+#
+#############################################################
+
+ERLANG_RELSYNC_VERSION = 5e037e2c67872a7974ac7aa75b8793c7f518cf02
+ERLANG_RELSYNC_SITE = $(call github,fhunleth,relsync,$(ERLANG_RELSYNC_VERSION))
+ERLANG_RELSYNC_LICENSE = MIT
+ERLANG_RELSYNC_LICENSE_FILE = LICENSE.md
+
+HOST_ERLANG_RELSYNC_DEPENDENCIES = host-erlang host-erlang-rebar
+
+define HOST_ERLANG_RELSYNC_BUILD_CMDS
+	$(HOST_MAKE_ENV) $(MAKE1) -C $(@D)
+endef
+
+define HOST_ERLANG_RELSYNC_INSTALL_CMDS
+	cp $(@D)/relsync $(HOST_DIR)/usr/bin
+endef
+
+$(eval $(host-generic-package))
